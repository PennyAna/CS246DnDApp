<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollMe"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--tools:context="com.pennyana.dnd.MainActivity"-->
    <!--android:background="@drawable/wood"-->

    <android.support.constraint.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adventureLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="5dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/adventureHead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:padding="5dp"
            android:text="@string/adventures_available"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:textStyle="bold"
            android:typeface="serif"
            app:layout_constraintBottom_toTopOf="@+id/adventureOne"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/adventureLayout"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/adventureOne"
            android:layout_width="wrap_content"
            android:layout_height="267dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="18dp"
            android:layout_marginTop="8dp"
            android:lineSpacingExtra="8sp"
            android:padding="15dp"
            android:text="@string/barber_text"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:typeface="serif"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/button_advent1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/adventureHead"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/adventureTwo"
            android:layout_width="0dp"
            android:layout_height="242dp"
            android:layout_marginStart="10dp"
            android:lineSpacingExtra="8sp"
            android:padding="15dp"
            android:text="@string/elf_text"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:typeface="serif"
            app:layout_constraintBottom_toTopOf="@id/adventureThree"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_advent1"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/adventureThree"
            android:layout_width="0dp"
            android:layout_height="320dp"
            android:lineSpacingExtra="8sp"
            android:padding="15dp"
            android:text="@string/granny_text"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:typeface="serif"
            app:layout_constraintBottom_toTopOf="@id/adventureFour"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/adventureFour"
            android:layout_width="0dp"
            android:layout_height="455dp"
            android:layout_marginTop="52dp"
            android:lineSpacingExtra="8sp"
            android:padding="15dp"
            android:text="@string/detective_text"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:typeface="serif"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/adventureThree" />

        <Button
            android:id="@+id/button_advent1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="@string/join_button"
            app:layout_constraintBottom_toBottomOf="@id/adventureOne"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/adventureOne" />

        <Button
            android:id="@+id/button_advent2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:text="@string/join_button"
            app:layout_constraintBottom_toTopOf="@+id/adventureThree"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/adventureTwo" />

        <Button
            android:id="@+id/button_advent3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="104dp"
            android:layout_marginEnd="24dp"
            android:text="@string/join_button"
            app:layout_constraintBottom_toTopOf="@+id/adventureFour"
            app:layout_constraintEnd_toStartOf="@+id/adventureThree"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/adventureThree"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/button_advent4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/adventureOne"
            android:text="@string/join_button"
            app:layout_constraintBottom_toBottomOf="@id/adventureLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/adventureFour" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>
